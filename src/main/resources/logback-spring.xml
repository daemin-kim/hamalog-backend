<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Properties for log file paths -->
    <springProfile name="!prod">
        <property name="LOG_DIR" value="${LOG_DIR:-./logs}" />
    </springProfile>
    <springProfile name="prod">
        <property name="LOG_DIR" value="${LOG_DIR:-/var/log/hamalog}" />
    </springProfile>
    
    <property name="APP_NAME" value="hamalog" />
    
    <!-- Console Appender for Development -->
    <springProfile name="!prod">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <!-- Improved readability with shorter logger names and better formatting -->
                <pattern>%d{HH:mm:ss.SSS} [%15.15t] %-5level [%X{requestId:-}] %logger{20} - %m%n</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>
    </springProfile>
    
    <!-- Console Appender for Production (JSON) -->
    <springProfile name="prod">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <includeContext>true</includeContext>
                <includeMdc>true</includeMdc>
                <customFields>{"service":"hamalog","environment":"production"}</customFields>
            </encoder>
        </appender>
    </springProfile>

    <!-- Application Log File Appender (JSON Format) -->
    <appender name="APPLICATION_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}-application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}-application.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <customFields>{"service":"hamalog","log_type":"application"}</customFields>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>DENY</onMatch>
            <onMismatch>ACCEPT</onMismatch>
        </filter>
    </appender>

    <!-- Error Log File Appender (JSON Format) -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}-error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}-error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <customFields>{"service":"hamalog","log_type":"error","severity":"high"}</customFields>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <!-- Access Log File Appender (JSON Format) -->
    <appender name="ACCESS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}-access.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}-access.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>200MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>false</includeContext>
            <includeMdc>true</includeMdc>
            <customFields>{"service":"hamalog","log_type":"access"}</customFields>
        </encoder>
    </appender>

    <!-- Security Log File Appender (JSON Format) -->
    <appender name="SECURITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}-security.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}-security.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <customFields>{"service":"hamalog","log_type":"security","category":"audit"}</customFields>
        </encoder>
    </appender>

    <!-- Database Query Log File Appender (JSON Format) -->
    <appender name="DATABASE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}-database.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}-database.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>150MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <customFields>{"service":"hamalog","log_type":"database","category":"query"}</customFields>
        </encoder>
    </appender>

    <!-- Async Appender for better performance -->
    <appender name="ASYNC_APPLICATION_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="APPLICATION_FILE"/>
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
    </appender>

    <appender name="ASYNC_ERROR_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ERROR_FILE"/>
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
    </appender>

    <appender name="ASYNC_ACCESS_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ACCESS_FILE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
    </appender>

    <appender name="ASYNC_SECURITY_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="SECURITY_FILE"/>
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
    </appender>

    <appender name="ASYNC_DATABASE_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="DATABASE_FILE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
    </appender>

    <!-- Logger Configurations -->
    
    <!-- Access Logging (RequestLoggingFilter) - Shortened name for readability -->
    <logger name="com.Hamalog.logging.RequestLoggingFilter" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_ACCESS_FILE"/>
    </logger>

    <!-- API Logging (ApiLoggingAspect) - Shortened name for readability -->
    <logger name="com.Hamalog.aop.ApiLoggingAspect" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_APPLICATION_FILE"/>
    </logger>

    <!-- Security Logging -->
    <logger name="org.springframework.security" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_SECURITY_FILE"/>
    </logger>
    
    <logger name="com.Hamalog.security" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_SECURITY_FILE"/>
    </logger>

    <!-- Application Loggers -->
    <logger name="com.Hamalog.service" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_APPLICATION_FILE"/>
    </logger>

    <logger name="com.Hamalog.controller" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_APPLICATION_FILE"/>
    </logger>

    <!-- Database Logging -->
    <springProfile name="!prod">
        <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_DATABASE_FILE"/>
        </logger>
        
        <logger name="org.hibernate.type.descriptor.sql" level="TRACE" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_DATABASE_FILE"/>
        </logger>
        
        <!-- Query execution time logging for development -->
        <logger name="org.hibernate.stat" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_DATABASE_FILE"/>
        </logger>
    </springProfile>
    
    <springProfile name="prod">
        <logger name="org.hibernate.SQL" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_DATABASE_FILE"/>
        </logger>
        
        <logger name="org.hibernate.type.descriptor.sql" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_DATABASE_FILE"/>
        </logger>
        
        <!-- Query execution time logging for production monitoring -->
        <logger name="org.hibernate.stat" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_DATABASE_FILE"/>
        </logger>
    </springProfile>

    <!-- Database Performance and Error Monitoring -->
    <logger name="org.hibernate.engine.jdbc.spi.SqlExceptionHelper" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_ERROR_FILE"/>
        <appender-ref ref="ASYNC_DATABASE_FILE"/>
    </logger>

    <!-- Connection Pool Monitoring -->
    <logger name="com.zaxxer.hikari.HikariConfig" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_DATABASE_FILE"/>
    </logger>
    
    <logger name="com.zaxxer.hikari.HikariDataSource" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_DATABASE_FILE"/>
    </logger>
    
    <!-- Connection Pool Performance Monitoring -->
    <logger name="com.zaxxer.hikari.pool.HikariPool" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_DATABASE_FILE"/>
    </logger>

    <!-- Redis Logging -->
    <logger name="org.springframework.data.redis" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_APPLICATION_FILE"/>
    </logger>

    <!-- Rate Limiting and Security Monitoring -->
    <logger name="com.Hamalog.security.filter" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_SECURITY_FILE"/>
    </logger>
    
    <logger name="com.Hamalog.service.security.RateLimitingService" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_SECURITY_FILE"/>
    </logger>

    <!-- OAuth2 Logging -->
    <logger name="org.springframework.security.oauth2" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_SECURITY_FILE"/>
    </logger>

    <!-- Task Execution and Async Processing -->
    <logger name="org.springframework.scheduling" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_APPLICATION_FILE"/>
    </logger>
    
    <logger name="org.springframework.task" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_APPLICATION_FILE"/>
    </logger>

    <!-- File Upload and Storage -->
    <logger name="com.Hamalog.service.medication.FileStorageService" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_APPLICATION_FILE"/>
    </logger>

    <!-- Error Handling -->
    <logger name="com.Hamalog.handler.GlobalExceptionHandler" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_ERROR_FILE"/>
    </logger>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_APPLICATION_FILE"/>
        <appender-ref ref="ASYNC_ERROR_FILE"/>
    </root>

</configuration>