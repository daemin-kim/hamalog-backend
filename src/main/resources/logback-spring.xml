<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">
    <springProperty scope="context" name="LOG_DIR" source="LOG_DIR" defaultValue="./logs"/>

    <!-- Application logs use MDC keys published by MDCUtil (camelCase) to avoid missing context fields -->
    <property name="APP_PATTERN"
              value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} level=%-5level logType=%X{log_type:-APP} correlationId=%X{correlationId:-} requestId=%X{requestId:-} user=%X{userId:-} ip=%X{ipAddress:-} thread=%thread logger=%logger{36} - %msg%n"/>

    <property name="SEC_PATTERN"
              value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} level=%-5level logType=%X{log_type:-SECURITY} event=%X{security_event_type:-} user=%X{security_user_id:-} ip=%X{security_ip_address:-} resource=%X{security_resource:-} action=%X{security_action:-} result=%X{security_result:-} risk=%X{security_risk_level:-} - %msg%n"/>

    <property name="AUDIT_PATTERN"
              value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} level=%-5level logType=%X{log_type:-AUDIT} operation=%X{audit_operation:-} entity=%X{audit_entity_type:-}/%X{audit_entity_id:-} user=%X{audit_user_id:-} ip=%X{audit_ip_address:-} status=%X{audit_status:-} - %msg%n"/>

    <property name="PERF_PATTERN"
              value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} level=%-5level logType=%X{log_type:-PERFORMANCE} operation=%X{perf_operation:-} durationMs=%X{perf_duration_ms:-} level=%X{perf_level:-} success=%X{perf_success:-} method=%X{perf_class:-}.%X{perf_method:-} - %msg%n"/>

    <!-- Console output for local development -->
    <appender name="APP_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${APP_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Application rolling file -->
    <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/application.log</file>
        <encoder>
            <pattern>${APP_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/application.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>14</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Audit rolling file -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/audit.log</file>
        <encoder>
            <pattern>${AUDIT_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/audit.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Security rolling file -->
    <appender name="SECURITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/security.log</file>
        <encoder>
            <pattern>${SEC_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/security.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Performance rolling file -->
    <appender name="PERFORMANCE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/performance.log</file>
        <encoder>
            <pattern>${PERF_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/performance.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>14</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Dedicated loggers -->
    <logger name="AUDIT" level="INFO" additivity="false">
        <appender-ref ref="AUDIT_FILE"/>
    </logger>

    <logger name="SECURITY" level="INFO" additivity="false">
        <appender-ref ref="SECURITY_FILE"/>
    </logger>

    <logger name="PERFORMANCE" level="INFO" additivity="false">
        <appender-ref ref="PERFORMANCE_FILE"/>
    </logger>

    <!-- Root logger for application logs -->
    <root level="INFO">
        <appender-ref ref="APP_CONSOLE"/>
        <appender-ref ref="APP_FILE"/>
    </root>
</configuration>
